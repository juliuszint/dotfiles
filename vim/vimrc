nmap <leader>h :History:<cr>
nmap <leader>t :Tags<cr>
nmap <leader>e :e .<cr>
nmap <leader>c :Bclose<cr>
nmap <C-s> :w<cr>
imap <C-s> <esc>:w<cr>

nmap go <C-o>
